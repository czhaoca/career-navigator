{
  "name": "career-navigator-backend",
  "version": "1.0.0",
  "description": "Backend API and services for Career Navigator",
  "main": "src/api/server.js",
  "scripts": {
    "start": "node src/api/server.js",
    "dev": "NODE_ENV=development nodemon src/api/server.js",
    "prod": "NODE_ENV=production node src/api/server.js",
    "mcp:start": "node src/services/mcp-server.js",
    "mcp:dev": "NODE_ENV=development node src/services/mcp-server.js",
    "mcp:prod": "NODE_ENV=production node src/services/mcp-server.js",
    "db:migrate": "node src/database/migrations/deploy-prefixed-schema.js",
    "db:migrate:dev": "NODE_ENV=development node src/database/migrations/deploy-prefixed-schema.js development",
    "db:migrate:prod": "NODE_ENV=production node src/database/migrations/deploy-prefixed-schema.js production",
    "db:seed": "node src/database/seeds/seed-data.js",
    "db:seed:dev": "NODE_ENV=development node src/database/seeds/seed-data.js",
    "db:seed:prod": "NODE_ENV=production node src/database/seeds/seed-data.js",
    "db:access-control": "node src/database/migrations/create-access-control.js",
    "db:access-control:dev": "NODE_ENV=development node src/database/migrations/create-access-control.js development",
    "db:access-control:prod": "NODE_ENV=production node src/database/migrations/create-access-control.js production",
    "db:health": "node src/utils/db-health-check.js",
    "db:test": "node src/utils/test-connections.js",
    "test": "jest",
    "test:unit": "jest --testPathPattern=tests/unit",
    "test:integration": "jest --testPathPattern=tests/integration",
    "test:e2e": "jest --testPathPattern=tests/e2e",
    "test:security": "node src/utils/security/test-security-features.js",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^0.5.0",
    "bcrypt": "^5.1.1",
    "compression": "^1.8.1",
    "cors": "^2.8.5",
    "date-fns": "^3.0.6",
    "dotenv": "^16.3.1",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "helmet": "^8.1.0",
    "ioredis": "^5.3.0",
    "joi": "^17.11.0",
    "jsonwebtoken": "^9.0.2",
    "lodash": "^4.17.21",
    "oracledb": "^6.3.0",
    "redis": "^4.6.0",
    "speakeasy": "^2.0.0",
    "uuid": "^9.0.1",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.8",
    "@types/node": "^20.10.0",
    "eslint": "^8.54.0",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  }
}