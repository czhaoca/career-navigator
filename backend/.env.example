# Environment
NODE_ENV=development

# API Server Configuration
API_PORT=3000
LOG_LEVEL=info

# Oracle Instant Client (shared)
ORACLE_INSTANT_CLIENT_PATH=/path/to/instantclient

# Development Database Configuration
DEV_DB_USER=your_dev_db_user
DEV_DB_PASSWORD=your_dev_db_password
DEV_DB_CONNECTION_STRING=your_dev_oracle_connection_string
DEV_DB_WALLET_PATH=/path/to/dev/wallet
DEV_DB_WALLET_PASSWORD=

# Production Database Configuration
PROD_DB_USER=your_prod_db_user
PROD_DB_PASSWORD=your_prod_db_password
PROD_DB_CONNECTION_STRING=your_prod_oracle_connection_string
PROD_DB_WALLET_PATH=/path/to/prod/wallet
PROD_DB_WALLET_PASSWORD=

# Active Database Selection (development, production, or both)
ACTIVE_DATABASES=both

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password

# Security Configuration
JWT_SECRET=your-super-secret-jwt-key-min-64-chars
JWT_REFRESH_SECRET=your-super-secret-refresh-key-min-64-chars
JWT_EXPIRY=15m
JWT_REFRESH_EXPIRY=7d

# Encryption
ENABLE_FIELD_ENCRYPTION=true
ENCRYPTION_KEY=your-32-byte-encryption-key-base64

# CORS Configuration
FRONTEND_URL=http://localhost:5173

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# MCP Server Configuration
MCP_PORT=3001
MCP_AUTH_REQUIRED=true

# Project Configuration
PROJECT_NAME=career-navigator
PROJECT_VERSION=1.0.0
TABLE_PREFIX=pf_
SCHEMA_PREFIX=career_nav_